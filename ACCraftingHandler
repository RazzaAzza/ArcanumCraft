package com.azza.arcanumcraft.handlers;

import com.azza.arcanumcraft.block.ACBlocks;
import com.azza.arcanumcraft.item.ACItems;
import com.azza.arcanumcraft.item.items.ACItem;

import net.minecraft.block.Block;
import net.minecraft.block.BlockPlanks;
import net.minecraft.init.Blocks;
import net.minecraft.init.Items;
import net.minecraft.item.ItemStack;
import net.minecraft.item.crafting.CraftingManager;
import net.minecraftforge.fml.common.registry.GameRegistry;
import net.minecraftforge.oredict.OreDictionary;

public class ACCraftingHandler {

	public static void init() {
		
		GameRegistry.addShapelessRecipe(new ItemStack(Blocks.PLANKS, 6), new ItemStack(Blocks.LOG), new ItemStack(ACItems.itemSaw, 1, OreDictionary.WILDCARD_VALUE));
		GameRegistry.addShapelessRecipe(new ItemStack(Blocks.PLANKS, 6, 1), new ItemStack(Blocks.LOG, 1, 1), new ItemStack(ACItems.itemSaw, 1, OreDictionary.WILDCARD_VALUE));
		GameRegistry.addShapelessRecipe(new ItemStack(Blocks.PLANKS, 6, 2), new ItemStack(Blocks.LOG, 1, 2), new ItemStack(ACItems.itemSaw, 1, OreDictionary.WILDCARD_VALUE));
	}
}
